<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PrintagoFolderWatch.CrossPlatform.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="PrintagoFolderWatch.CrossPlatform.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Printago Folder Watch"
        Width="800" Height="600"
        MinWidth="600" MinHeight="500"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="10">
            <TextBlock Text="Printago Folder Watch"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#64C8FF"/>
            <TextBlock Text="{Binding Status}"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Foreground="LightGreen"/>
            <TextBlock Text="{Binding Version, StringFormat='Version {0}'}"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="0,20,0,20">
            <!-- Status Tab -->
            <TabItem Header="Status">
                <Grid RowDefinitions="Auto,*" Margin="10">
                    <!-- Stats -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,*,*" Margin="0,0,0,20">
                        <Border Grid.Column="0" Background="#282828" CornerRadius="8" Padding="20" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Queue" FontWeight="Bold" Foreground="Gray"/>
                                <TextBlock Text="{Binding QueueCount}" FontSize="32" FontWeight="Bold" Foreground="#64C8FF"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="1" Background="#282828" CornerRadius="8" Padding="20" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Folders" FontWeight="Bold" Foreground="Gray"/>
                                <TextBlock Text="{Binding FoldersCount}" FontSize="32" FontWeight="Bold" Foreground="#64C8FF"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="2" Background="#282828" CornerRadius="8" Padding="20" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Synced" FontWeight="Bold" Foreground="Gray"/>
                                <TextBlock Text="{Binding SyncedCount}" FontSize="32" FontWeight="Bold" Foreground="#64C8FF"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Queue List -->
                    <Border Grid.Row="1" Background="#282828" CornerRadius="8" Padding="10">
                        <ListBox ItemsSource="{Binding QueueItems}"
                                 Background="Transparent"
                                 Foreground="White"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <StackPanel Margin="10" Spacing="15">
                    <StackPanel Spacing="5">
                        <TextBlock Text="Watch Folder:" FontWeight="Bold"/>
                        <TextBox Text="{Binding WatchPath}" Watermark="Path to folder to watch"/>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="API URL:" FontWeight="Bold"/>
                        <TextBox Text="{Binding ApiUrl}" Watermark="https://api.printago.io"/>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="API Key:" FontWeight="Bold"/>
                        <TextBox Text="{Binding ApiKey}" PasswordChar="*" Watermark="Your API key"/>
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Store ID:" FontWeight="Bold"/>
                        <TextBox Text="{Binding StoreId}" Watermark="Your store ID"/>
                    </StackPanel>

                    <Button Content="Save Settings"
                            Command="{Binding SaveSettingsCommand}"
                            HorizontalAlignment="Right"
                            Padding="20,10"/>
                </StackPanel>
            </TabItem>

            <!-- Logs Tab -->
            <TabItem Header="Logs">
                <Border Background="#1E1E1E" CornerRadius="8" Margin="10">
                    <ListBox ItemsSource="{Binding Logs}"
                             Background="Transparent"
                             Foreground="LightGray"
                             FontFamily="Consolas, Monaco, monospace"
                             FontSize="12"/>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <Button Content="Start Watching"
                    Command="{Binding StartCommand}"
                    Padding="20,10"
                    Background="#3264AA"/>
            <Button Content="Stop"
                    Command="{Binding StopCommand}"
                    Padding="20,10"/>
            <Button Content="Sync Now"
                    Command="{Binding SyncNowCommand}"
                    Padding="20,10"
                    Background="#3264AA"/>
        </StackPanel>
    </Grid>
</Window>
