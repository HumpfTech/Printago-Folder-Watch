<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PrintagoFolderWatch.CrossPlatform.Views.LogsWindow"
        Title="Logs"
        Width="700" Height="500"
        WindowStartupLocation="CenterScreen">

    <Grid RowDefinitions="*,Auto,Auto" Margin="10">
        <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="8">
            <ListBox x:Name="LogsList"
                     Background="Transparent"
                     Foreground="LightGray"
                     FontFamily="Consolas, Monaco, monospace"
                     FontSize="11"/>
        </Border>

        <!-- Logs Path Info -->
        <Border Grid.Row="1" Background="#202020" CornerRadius="4" Padding="8" Margin="0,10,0,0">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <TextBlock Grid.Column="0" Text="Log files: " Foreground="Gray" FontSize="10" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" x:Name="LogsPathText"
                           Text=""
                           Foreground="#888888"
                           FontSize="10"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="2"
                        x:Name="OpenLogsButton"
                        Content="Open Folder"
                        Click="OpenLogsFolder_Click"
                        Padding="8,3"
                        FontSize="10"
                        Background="#383838"
                        Margin="5,0,0,0"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="Clear" Click="Clear_Click" Padding="15,8"/>
            <Button Content="Close" Click="Close_Click" Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>
