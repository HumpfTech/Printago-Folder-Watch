<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PrintagoFolderWatch.CrossPlatform.Views.LogsWindow"
        Title="Logs"
        Width="700" Height="500"
        WindowStartupLocation="CenterScreen">

    <Grid RowDefinitions="*,Auto" Margin="10">
        <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="8">
            <ListBox x:Name="LogsList"
                     Background="Transparent"
                     Foreground="LightGray"
                     FontFamily="Consolas, Monaco, monospace"
                     FontSize="11"/>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="Clear" Click="Clear_Click" Padding="15,8"/>
            <Button Content="Close" Click="Close_Click" Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>
